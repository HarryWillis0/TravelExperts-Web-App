            @Html.EditorFor(model => model.CustFirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CustFirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    @* Last Name *@
